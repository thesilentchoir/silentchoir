extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Sign up
  form(id='new-report-form', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='username') Username
      .col-md-7
        input.form-control(type='username', name='username', id='username', placeholder='Username', autofocus, autocomplete='username', required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='alleged_party') Alleged Party
      .col-md-7
        input.form-control(type='alleged_party', name='alleged_party', id='alleged_party', placeholder='Alleged Party', autofocus, autocomplete='alleged_party', required)

    .form-group.offset-sm-3.col-md-7.pl-2
      button.btn.btn-success(type='submit')
        i.fas.fa-user-plus.fa-sm
        | Submit
